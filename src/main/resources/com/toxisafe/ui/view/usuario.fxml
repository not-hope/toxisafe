<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<?import org.kordamp.ikonli.javafx.FontIcon?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.toxisafe.ui.controller.UsuarioController"
            prefWidth="700" prefHeight="500"
            stylesheets="@/com/toxisafe/ui/css/clean-theme.css">
    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

    <top>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Usuarios" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <HBox spacing="10" alignment="CENTER_LEFT" styleClass="search-bar">
                <TextField fx:id="txtFiltro" promptText="Buscar" styleClass="search-field" HBox.hgrow="ALWAYS"/>
            </HBox>

        </HBox>
    </top>

    <center>
        <VBox spacing="8" VBox.vgrow="ALWAYS">
            <TableView fx:id="tablaUsuarios" VBox.vgrow="ALWAYS" styleClass="table-elevated">
                <columns>
                    <TableColumn fx:id="colNombre" text="Nombre" prefWidth="220"/>
                    <TableColumn fx:id="colUsername" text="Usuario" prefWidth="160"/>
                    <TableColumn fx:id="colRol" text="Rol" prefWidth="200"/>
                </columns>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button fx:id="btnCrear" text="Nuevo usuario" styleClass="btn-open" onAction="#handleCrear">
                <graphic>
                    <FontIcon iconLiteral="mdi2p-plus" iconSize="16" iconColor="WHITE"/>
                </graphic>
            </Button>
            <Button fx:id="btnEditar" text="Editar" onAction="#handleEditar">
                <graphic>
                    <FontIcon iconLiteral="mdi2p-pencil" iconSize="16" iconColor="WHITE"/>
                </graphic>
            </Button>
            <Button fx:id="btnEliminar" text="Eliminar" onAction="#handleEliminar" styleClass="btn-danger">
                <graphic>
                    <FontIcon iconLiteral="mdi2d-delete" iconSize="16" iconColor="WHITE"/>
                </graphic>
            </Button>
        </HBox>
    </bottom>

</BorderPane>
