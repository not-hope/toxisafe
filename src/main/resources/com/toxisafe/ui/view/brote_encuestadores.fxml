<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<?import org.kordamp.ikonli.javafx.FontIcon?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.toxisafe.ui.controller.BroteEncuestadoresController"
            prefWidth="720" prefHeight="420"
            stylesheets="@/com/toxisafe/ui/css/clean-theme.css">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
            <Label fx:id="lblTitulo" text="Asignar encuestadores" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <center>
        <GridPane hgap="10" vgap="10" style="-fx-padding: 15;">
            <columnConstraints>
                <ColumnConstraints prefWidth="320"/>
                <ColumnConstraints prefWidth="80"/>
                <ColumnConstraints prefWidth="320"/>
            </columnConstraints>

            <Label text="Disponibles" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <Label text="Asignados" GridPane.rowIndex="0" GridPane.columnIndex="2"/>

            <ListView fx:id="lstDisponibles" GridPane.rowIndex="1" GridPane.columnIndex="0" prefHeight="300"/>

            <VBox alignment="CENTER" spacing="6" GridPane.rowIndex="1" GridPane.columnIndex="1">
                <Button fx:id="btnAgregar" text="&gt;&gt;" onAction="#agregarSeleccion"/>
                <Button fx:id="btnQuitar" text="&lt;&lt;" onAction="#quitarSeleccion"/>
            </VBox>

            <ListView fx:id="lstAsignados" GridPane.rowIndex="1" GridPane.columnIndex="2" prefHeight="300"/>
        </GridPane>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
            <Button text="Cerrar" onAction="#cerrar" styleClass="btn-close">
                <graphic>
                    <FontIcon iconLiteral="mdi2c-close-thick" iconSize="16" iconColor="WHITE"/>
                </graphic>
            </Button>
            <Button text="Guardar" onAction="#guardar" defaultButton="true">
                <graphic>
                    <FontIcon iconLiteral="mdi2a-account-plus" iconSize="16" iconColor="WHITE"/>
                </graphic>
            </Button>
        </HBox>
    </bottom>
</BorderPane>