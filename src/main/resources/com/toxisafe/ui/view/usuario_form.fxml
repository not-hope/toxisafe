<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<?import org.kordamp.ikonli.javafx.FontIcon?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.toxisafe.ui.controller.UsuarioFormController"
            prefWidth="520" prefHeight="300"
            stylesheets="@/com/toxisafe/ui/css/clean-theme.css">

    <center>
        <GridPane hgap="10" vgap="10" style="-fx-padding: 15;">
            <columnConstraints>
                <ColumnConstraints minWidth="120" halignment="RIGHT"/>
                <ColumnConstraints minWidth="180" hgrow="ALWAYS"/>
                <ColumnConstraints minWidth="140"/>
            </columnConstraints>

            <Label text="Nombre:"   GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="txtNombre" GridPane.rowIndex="0" GridPane.columnIndex="1" GridPane.columnSpan="2"/>

            <Label text="Usuario:"  GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="txtUsername" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            <!-- Label de estado de username -->
            <Label fx:id="lblUserCheck" text="" GridPane.rowIndex="1" GridPane.columnIndex="2"/>

            <Label text="Rol:"      GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <ComboBox fx:id="cmbRol" GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.columnSpan="2"/>

            <Label text="ContraseÃ±a:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <PasswordField fx:id="txtPassword" GridPane.rowIndex="3" GridPane.columnIndex="1" GridPane.columnSpan="2"/>
        </GridPane>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
            <Button text="Cancelar" onAction="#cancelar" styleClass="btn-close">
                <graphic>
                    <FontIcon iconLiteral="mdi2c-close-thick" iconSize="16" iconColor="WHITE"/>
                </graphic>
            </Button>
            <Button text="Guardar"  onAction="#guardar" defaultButton="true" styleClass="btn-open">
                <graphic>
                    <FontIcon iconLiteral="mdi2c-content-save" iconSize="16" iconColor="WHITE"/>
                </graphic>
        </Button>
        </HBox>
    </bottom>
</BorderPane>
